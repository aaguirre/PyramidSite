{% extends "base.html" %}
{% import 'baseform.jinja2' as f %}
{% block content %}
<div class="row-fluid">
    <div class="span12">
        <h1 class="titulo_principal">User Profile</h1>

        <div class="row-fluid">
            <div class="span12">
                <div class="well">
                    <h3 class="subtitulo_my_profile">Change Password</h3>
                    {% if form %}
                        <form id="" class="well" action="" method="post" accept-charset="utf-8">
                            <fieldset>                            
                                {{ f.field(form.password) }}
                                {{ f.field(form.retype_password) }}
                            </fieldset>
                            <button type="submit" class="btn">Submit</button>
                        </form>
                    {% endif %}
                </div>
            </div>


        </div>
        
    </div>
</div>

{% endblock %}